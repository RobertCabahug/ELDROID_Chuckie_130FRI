<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/image13" />

    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_image"
        android:layout_marginTop="50dp"
        android:text="Maayong Adlaw"
        android:textSize="22sp"
        android:textColor="#0067A5"
        android:fontFamily="@font/lato_bold" />

    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/greeting_text"
        android:layout_alignLeft="@id/greeting_text"
        android:layout_marginTop="20dp"
        android:text="Full Name"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/lato_bold" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_name"
        android:layout_alignLeft="@id/full_name"
        android:layout_marginTop="20dp"
        android:text="Phone Number"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/lato_regular" />

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Edit Profile"
        android:textSize="16sp"
        android:textColor="#0067A5"
        android:fontFamily="@font/lato_regular" />

    <TextView
        android:id="@+id/manage_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_profile"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:text="Manage Linked Bank Accounts"
        android:textSize="16sp"
        android:textColor="#0067A5"
        android:fontFamily="@font/lato_regular" />

    <TextView
        android:id="@+id/manage_rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manage_bank"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:text="Manage My Rewards"
        android:textSize="16sp"
        android:textColor="#0067A5"
        android:fontFamily="@font/lato_regular" />

    <TextView
        android:id="@+id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manage_rewards"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:text="Change Password"
        android:textSize="16sp"
        android:textColor="#0067A5"
        android:fontFamily="@font/lato_regular" />

    <TextView
        android:id="@+id/booking_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_password"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:text="Booking History"
        android:textSize="16sp"
        android:textColor="#0067A5"
        android:fontFamily="@font/lato_regular" />

    <TextView
        android:id="@+id/logout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/booking_history"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Logout"
        android:textSize="16sp"
        android:textColor="#0067A5"
        android:fontFamily="@font/lato_regular"
        android:clickable="true"
        android:focusable="true" />
</RelativeLayout>
